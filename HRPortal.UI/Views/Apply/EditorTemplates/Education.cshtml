@model HRPortal.Models.Education


<div class="education">
    <div class="tableRow">
        <p class="heading">
            @Html.Label("Name:")
        </p>
        <p class="field">
            @Html.TextBoxFor(m => m.Name, new { @class = "longTextBox" })
        </p>
    </div>

    <div class="Education">
        <div class="tableRow">
            <p></p>
            <p class="label">@Html.Label("Program Type:")</p>
            <p class="field">@Html.TextBoxFor(m => m.Type, new { @class = "longTextBox" })</p>
           <p class="label">@Html.Label("Program Description:")</p>
            <p>@Html.TextAreaFor(m => m.Description, 3, 120, null)</p>

        </div>
    </div>
</div>
